<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="ru.apchola.team.citywalks63.MapActivity" />

    <ImageButton
        android:id="@+id/walk_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:tint="@color/lightSkyBlue"
        android:backgroundTint="@color/realBlue"
        android:background="@drawable/circle_icon"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        android:padding="7dp"
        android:src="@drawable/walk_icon"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageButton
        android:id="@+id/add_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="8dp"
        android:adjustViewBounds="true"
        android:tint="@color/lightSkyBlue"
        android:backgroundTint="@color/realBlue"
        android:background="@drawable/circle_icon"
        android:scaleType="centerInside"
        android:padding="6dp"
        android:src="@drawable/add_icon"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/accept_button" />

    <ImageButton
        android:id="@+id/delete_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="8dp"
        android:adjustViewBounds="true"
        android:tint="@color/lightSkyBlue"
        android:backgroundTint="@color/realBlue"
        android:background="@drawable/circle_icon"
        android:src="@drawable/delete_icon"
        android:scaleType="centerInside"
        android:padding="6dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/accept_button" />

    <ImageButton
        android:id="@+id/accept_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:adjustViewBounds="true"
        android:tint="@color/lightSkyBlue"
        android:backgroundTint="@color/realBlue"
        android:background="@drawable/circle_icon"
        android:src="@drawable/accept_icon"
        android:scaleType="centerInside"
        android:padding="6dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</android.support.constraint.ConstraintLayout>
